<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
 xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.jona.latacungadigital.Activities.AtractivoActivity">

    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="12dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtTituloAtractivo"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:text="Titulo"
                android:layout_marginBottom="5dp"
                />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RatingBar
                        android:id="@+id/ratingBar_total"
                        android:layout_gravity="left"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="3.5"
                        android:stepSize="0.5"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtRatingToatal"
                        android:textStyle="bold"
                        android:text="0.0"
                        android:layout_marginBottom="5dp"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtCategoriaAtractivo"
                    android:textStyle="bold"
                    android:text="Categoria"
                    android:layout_marginBottom="8dp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtTipo"
                    android:text="Tipo"
                    android:layout_marginBottom="8dp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtSubtipo"
                    android:text="Sub tipo"

                    android:layout_marginBottom="8dp"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtDistancia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="2km"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="40dp" />
            </LinearLayout>
        </LinearLayout>



            <com.borjabravo.readmoretextview.ReadMoreTextView
                android:id="@+id/text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:trimCollapsedText="Ver mas"
                app:trimExpandedText="Ver menos"
                app:trimLength="500"
                app:showTrimExpandedText="true"
                app:colorClickableText="@color/colorAccent"
                app:trimMode="trimModeLength"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:text="Impacto Positivo:"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtImpactoPositivo"
                android:text="Impacto Positivo"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="Impacto Negativo:"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Impacto Positivo"
                android:layout_marginLeft="10dp"

                android:id="@+id/txtImpactoNegativo"
                android:layout_marginBottom="10dp"/>





                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingEnd="10dp"

                    android:paddingTop="5dp"
                    android:textStyle="bold"

                    android:text="@string/scheduleTitle" />



                <LinearLayout
                    android:id="@+id/horarioLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_siempre_abierto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:paddingEnd="10dp"
                        android:visibility="gone"
                        android:paddingStart="5dp"
                        android:paddingTop="5dp" />

                    <TextView
                        android:id="@+id/txt_lunes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:paddingEnd="10dp"
                        android:paddingStart="5dp"
                        android:visibility="gone"
                        android:paddingTop="5dp" />

                    <TextView
                        android:id="@+id/txt_martes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:paddingEnd="10dp"
                        android:paddingStart="5dp"
                        android:paddingTop="5dp"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/txt_miercoles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:paddingEnd="10dp"
                        android:paddingStart="5dp"
                        android:paddingTop="5dp"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/txt_jueves"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:paddingEnd="10dp"
                        android:paddingStart="5dp"
                        android:paddingTop="5dp"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/txt_viernes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:paddingEnd="10dp"
                        android:paddingStart="5dp"
                        android:paddingTop="5dp"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/txt_sabado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:paddingEnd="10dp"
                        android:paddingStart="5dp"
                        android:paddingTop="5dp"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/txt_domingo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:paddingEnd="10dp"
                        android:paddingStart="5dp"
                        android:paddingTop="5dp"
                        android:visibility="gone"
                        />

                </LinearLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>