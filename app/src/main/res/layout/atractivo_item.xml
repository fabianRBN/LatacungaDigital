<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/ic_picture"
                android:id="@+id/imgView_item_atractivo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:background="#3c454545"
                android:id="@+id/titulo_item_atractivo"
                android:layout_alignBottom="@id/imgView_item_atractivo"
                android:text="Atractivo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="200m"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/txt_distancia"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"

                >
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/btn_360"
                    android:background="#00ffffff"
                    android:src="@drawable/ic_burst_mode_black_24dp"/>

                <ImageButton
                    android:id="@+id/btn_ar"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="#00ffffff"

                    android:src="@drawable/ic_eye_black_24dp"
                 />

            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>