<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.jona.latacungadigital.Activities.Fragments.MenuARFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cropToPadding="false"
            android:src="@drawable/fondo5"
            android:scaleType="centerCrop"
            />

        <com.hitomi.cmlibrary.CircleMenu
            android:id="@+id/circle_menu"
            android:layout_width="276dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="97dp"
            android:text="Panoramica"
            android:background="#ab060606"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:visibility="gone"

            android:textStyle="bold|italic"
            android:id="@+id/txt_panoramica" />

        <TextView
            android:id="@+id/txt_servicios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="116dp"
            android:layout_toEndOf="@+id/txt_panoramica"
            android:background="#ab060606"
            android:text="Servicios"
            android:visibility="gone"

            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/txt_atractivos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txt_servicios"
            android:layout_alignBottom="@+id/txt_servicios"
            android:layout_toStartOf="@+id/txt_panoramica"
            android:background="#ab060606"
            android:text="Atractivos"
            android:visibility="gone"

            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold|italic" />

    </RelativeLayout>


</FrameLayout>
